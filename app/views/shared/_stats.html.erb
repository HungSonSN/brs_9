<% @user ||= current_user %>
<%= image_tag @user.image.url if @user.image? %>
<div class="stats">
  <a href="<%= user_path @user %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= user_path @user %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>