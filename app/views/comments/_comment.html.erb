<li id="comment-<%= comment.id %>">
  <div class="comment-avatar">
    <%= image_tag comment.user.image.url if comment.user.image? %>
  </div>
  <div class="comment-content-<%= comment.id %>">
    <span><%= comment.user.username %></span>
    <p><%= comment.content %></p>
    <span class="timestamp">
      Posted <%= time_ago_in_words comment.created_at %>
      <% if current_user.is_user? comment.user %>
        <%= link_to "delete", review_comment_path(comment.review, id: comment.id), method: :delete, 
                remote: true %>
      <% end %>
    </span>  
  </div>
  <div class="clear"></div>  
</li>  