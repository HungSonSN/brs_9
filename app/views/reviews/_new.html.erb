<% provide(:title, "new review") %>
<h1>New Review for <%= @book_state.book.title %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@book_state.book, Review.new], remote: true do |f| %>
      <%= f.hidden_field :book_id, value: @book_state.book.id %>
      <%= f.hidden_field :rate, value: 0 %>
      <%= f.label :content, "Your review:" %>
      <%= f.text_area :content, placeholder: "Review content", size: "200x20", 
      class: "form-control" %><br>
      <%= f.submit "Create review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>