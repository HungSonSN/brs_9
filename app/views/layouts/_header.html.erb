<header class='navbar navbar-fixed-top navbar-inverse'>
  <div class='container'>
    <%= link_to 'Book Review System', root_path, id: 'logo' %>
    <nav>
      <ul class='nav navbar-nav navbar-right'>
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Category', categories_path %></li>
        <li><%= link_to 'Book', books_path %></li>
        <li><%= link_to 'Request', requests_path %></li>   
        <% unless user_signed_in? %>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
        <% else %>
          <li><%= link_to 'Users', users_path if current_user.is_admin? %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li>
                <%= link_to "Settings", edit_user_registration_path %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>