<h1>All Books Requests</h1>
<%= link_to "Create request", new_request_path %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-striped">
      <tr>
        <th class="text-center">Book Name</th>
        <th class="text-center">Book Url</th>
        <th class="text-center">State</th>
        <th class="text-center">Delete</th>
      </tr>
    <% @requests.each do |request| %>
      <tr>
        <td class="text-center"><%= request.book_name %></td>
        <td class="text-center"><%= request.book_url %></td>  
        <td class="text-center"><%= request.state %></td>
        <td class="text-center">
          <%= link_to "Delete", request, method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
