<% provide(:title, "new category") %>
<h1>New Category</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category, html: {multipart: true}) do |f| %>
      <%= f.text_field :name, placeholder: "Category name", 
      class: "form-control" %><br>
      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %><br>
      <%= f.submit "Create category", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#category_image').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert("Maximum file size is 5MB. Please choose a smaller file.");
    }
  });
</script>